{
  "apps": [
    {
      "name": "ExchangeMiningTask",
      "script": "./core/Tasks/Mining/ExchangeMiningTask.js",
      "exec_mode": "fork",
      "watch": [
        "core"
      ],
      "ignore_watch": [
        "./core/Tasks/Deposit/BlockNumber",
        "./core/Tasks/Deposit/GTBBlockNumber",
        "./core/Tasks/Deposit/ETCBlockNumber"
      ],
      "watch_options": {
        "usePolling": true
      },
      "merge_logs": true,
      "out_file": "./logs/Mining/ExchangeMiningTask.out.log",
      "error_file": "./logs/Mining/ExchangeMiningTask.err.log",
      "log_date_format": "YYYY-MM-DD HH:mm:ss"
    }
  ]
}