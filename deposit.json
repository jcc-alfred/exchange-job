{
  "apps": [
    {
      "name": "DepositEthTask",
      "script": "./core/Tasks/Deposit/EthTask.js",
      "exec_mode": "fork",
      "watch": [
        "core"
      ],
      "ignore_watch": [
        "./core/Tasks/Deposit/BlockNumber",
        "./core/Tasks/Deposit/GTBBlockNumber",
        "./core/Tasks/Deposit/ETCBlockNumber"
      ],
      "watch_options": {
        "usePolling": true
      },
      "merge_logs": true,
      "out_file": "./logs/Deposit/EthTask.out.log",
      "error_file": "./logs/Deposit/EthTask.err.log",
      "log_date_format": "YYYY-MM-DD HH:mm:ss"
    },
